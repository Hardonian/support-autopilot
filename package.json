{
  "name": "support-autopilot",
  "version": "0.1.0",
  "description": "Runnerless support autopilot - triage, draft responses with citations, propose KB patches",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "support": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean",
    "dev": "tsx watch src/cli.ts",
    "lint": "eslint src --ext .ts --max-warnings=0",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "pnpm run lint && pnpm run typecheck && pnpm run test",
    "runnerless:audit": "node ../autopilot-suite/packages/runnerless-audit/dist/cli.js .",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "support",
    "autopilot",
    "triage",
    "kb",
    "jobforge",
    "llm",
    "citations"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@autopilot/contracts": "file:../autopilot-suite/packages/contracts",
    "@autopilot/jobforge-client": "file:../autopilot-suite/packages/jobforge-client",
    "@autopilot/profiles": "file:../autopilot-suite/packages/profiles",
    "zod": "^3.24.1",
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
