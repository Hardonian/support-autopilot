{
  "name": "support-autopilot",
  "version": "0.1.0",
  "description": "Runnerless support autopilot - triage, draft responses with citations, propose KB patches",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "support": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean",
    "dev": "tsx watch src/cli.ts",
    "lint": "eslint src --ext .ts --max-warnings=0",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "verify:fast": "pnpm run lint && pnpm run typecheck && pnpm run build",
    "verify:full": "pnpm run verify:fast && pnpm run test",
    "contracts:compat": "node scripts/contracts-compat.mjs",
    "contracts:check": "node scripts/contracts-check.mjs",
    "doctor": "node scripts/doctor.mjs",
    "fixtures:export": "node scripts/fixtures-export.mjs",
    "docs:verify": "pnpm run build && node scripts/docs-verify.mjs",
    "check": "pnpm run verify:full",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "support",
    "autopilot",
    "triage",
    "kb",
    "jobforge",
    "llm",
    "citations"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.17.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
